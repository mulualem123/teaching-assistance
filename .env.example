# Example environment variables for teaching-assistance
# Copy to a file named .env locally (do NOT commit .env to git) and fill values.

# Flask secret
SECRET_KEY=
SECURITY_PASSWORD_SALT=

# Admin account used by management commands
ADMIN_EMAIL=
ADMIN_PASSWORD=

# Database
DATABASE_URL=sqlite:///flask_package/instance/site.db

# Mail / SMTP (if used)
MAIL_SERVER=
MAIL_PORT=
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_USE_TLS=true
MAIL_USE_SSL=false

# Any other service keys (placeholders)
# SENTRY_DSN=
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
